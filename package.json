{
  "name": "take-ur-trip-backend",
  "version": "1.0.0",
  "description": "backend",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npx tsc && npm run copy-files",
    "start": "node dist/index.js",
    "postinstall": "tsc",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 ./middlewares/*.hbs ./dist/middlewares",
    "devOnlyBackend": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/index.js\"",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/index.js\" \"cd ../ && npm start --prefix frontend-dashboard\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-promise-router": "^4.1.1",
    "geolib": "^3.3.3",
    "geolocator": "^2.1.5",
    "get-distance-between-points": "^1.2.0",
    "google-distance-matrix": "^1.1.1",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.8.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.8.2",
    "@types/nodemailer": "^6.4.6",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
